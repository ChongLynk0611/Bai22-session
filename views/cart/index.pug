extends ../layout/layout.pug 
block head 
    link(rel="stylesheet", href="listBooks.css")
block content
    nav(class="navbar navbar-expand-lg navbar-light bg-light")
            a(href="/home",class="navbar-brand")
                img(src='logo.jpg',height="30",width="30")
            ul(class="navbar-nav mr-auto")
                li(class="nav-item active")
                    a(href="/home",class="nav-link") HOME
                li(class="nav-item")
                    span
                        a(href="/cart",class="nav-link") cart
                            span (#{count}) 
    div.container
            each book in books
                div.item
                    img(src=book.img, alt="").image
                    div.infor 
                        div Name: #{book.name}
                        div desciption: #{book.description}
                    a.btn.btn-primary(href="/cart/add/"+book.id) add to cart
        

    